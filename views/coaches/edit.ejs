<% include ../partials/header %>

<div class="container" style="width: 30%; margin: 30px auto;">
<h2 style="margin-bottom: 30px;">Edit Coach</h2>
<form action="/coaches/<%= coach._id%>?_method=PUT" method="POST">
    <div class="form-group">
    <input
        type="text"
        name="coach[name]"
        class="form-control"
        value="<%= coach.name %>"
        placeholder="Name"
    />
    </div>
    <div class="form-group">
    <input
        type="number"
        name="coach[experience]"
        class="form-control"
        value="<%= coach.experience %>"
        min="0"
        step="1"
        placeholder="year of experience"
    />
    </div>
    <div class="form-group">
        <input
            type="text"
            name="coach[location]"
            class="form-control"
            placeholder="gym's url"
        />
        </div>
        <div class="form-group">
            <input
                type="text"
                name="coach[gym]"
                class="form-control"
                placeholder="gym's name"
            />
            </div>
    <div class="form-group">
    <input
        type="text"
        name="coach[image]"
        class="form-control"
        value="<%= coach.image%>"
        placeholder="image url"
    />
    </div>
    <div class="form-group">
    <input
        id="des"
        type="text"
        name="coach[description]"
        class="form-control"
        value="<%= coach.description%>"
        placeholder="description"
    />
    </div>
    <input
    type="submit"
    value="Submit"
    class="btn btn-lg btn-primary btn-block"
    />
</form>
<a href="/coaches">Back</a>
</div>
<hr class="well">

<% include ../partials/footer %>
