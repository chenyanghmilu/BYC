<%- include('../partials/header') %>

<div class="container">
<header class="jumbotron" id="coachPage" style="margin: 30px auto;">
    <div class="container">
        <h1>Who is the Best Coach?</h1>
        <h4>Upload Your Favouite Coach now!</h4>
        <a class="btn btn-lg btn-primary btn-info" href="/coaches/new">Add a new Coach</a>
        </div>
</header>
<div class="row" style="display: flex; justify-content: space-between; flex-wrap: wrap">
    <% coaches.forEach(function(coach){ %>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <a href="coaches/<%= coach._id %>">
                <img src="<%= coach.image %>" />
            </a>
            <div class="caption">
                <h3><%= coach.name%></h3>
            </div>
        </div>
    </div>
    <% }); %>
</div>
</div>
<hr class="well">

<%- include('../partials/footer') %>