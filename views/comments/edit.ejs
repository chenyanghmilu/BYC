<% include ../partials/header %>

<div class="container" style="width: 30%; margin: 30px auto;">
<h2 style="margin-bottom: 30px;">Edit Comment</h2>
<form
    action="/courses/<%=course_id%>/comments/<%=comment._id%>?_method=PUT"
    method="POST"
>
    <div class="form-group">
    <textarea
        type="text"
        name="comment[text]"
        class="form-control"
        value="<%=comment.text%>"
    ></textarea>
    </div>
    <input
    type="submit"
    value="Submit"
    class="btn btn-lg btn-primary btn-block"
    />
</form>
<a href="/courses">Back</a>
</div>
<hr class="well">

