<% include ../partials/header %>

<div class="container" style="width: 30%; margin: 30px auto;">
<h2 style="margin-bottom: 30px;">Edit Course</h2>
<form action="/courses/<%= course._id %>?_method=PUT" method="POST">
    <div class="form-group">
    <input
        type="text"
        name="course[name]"
        class="form-control"
        value="<%= course.name %>"
    />
    </div>
    <div class="form-group">
    <input
        type="number"
        name="course[price]"
        class="form-control"
        value="<%= course.price %>"
        min="10"
        step="1"
    />
    </div>

    <div class="form-group">
        <input
            type="text"
            name="course[location]"
            class="form-control"
            placeholder="gym's name"
        />
        </div>

    <div class="form-group">
    <input
        type="text"
        name="course[image]"
        class="form-control"
        value="<%= course.image%>"
    />
    </div>
    <div class="form-group">
    <textarea
        type="text"
        name="course[description]"
        class="form-control"
        value="<%= course.description%>"
    ></textarea>
    </div>
    <input
    type="submit"
    value="Submit"
    class="btn btn-lg btn-primary btn-block"
    />
</form>
<a href="/courses">Back</a>
</div>
<hr class="well">

<% include ../partials/footer %>
