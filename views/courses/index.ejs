<%- include('../partials/header') %>

    <div class="container">
        <header class="jumbotron" style="margin: 30px auto;">
            <div class="container">
                <h1>Let's Burn Your Calorie!</h1>
                <h4>Upload Your Favouite Courses now!</h4>
                <a class="btn btn-lg btn-primary" href="/courses/new">Add a new Course</a>
            </div>
        </header>
        <div class="row" style="display: flex; justify-content: space-between; flex-wrap: wrap">
            <% courses.forEach(function(course){ %>
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <a href="courses/<%= course._id %>">
          <img src="<%= course.image %>" />
        </a>
                        <div class="caption">
                            <h3>
                                <%= course.name%>
                            </h3>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <hr class="well" />

    <%- include('../partials/footer') %>